provider "google" {
  project = "YOUR_PROJECT_ID"
  region = "us-west1-b"
}

resource "google_compute_firewall" "firewall" {
  name = "allow-5000"
  network = "default"
  allow {
    protocol = "tcp"
    ports = ["5000"]
  }
  source_ranges = ["0.0.0.0/0"]
  target_tags = ["allow-5000"]
}

